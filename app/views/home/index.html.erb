                { 
                  "Id":"1281295-002",
                  "Name":"SHORT SC30 TOP GUN",
                  "Category": "Shorts",
                  "Stock":5,
                  "Price":799,
                  "Availability": true
                },
              ]      
  });
  
  // DataSource Total
  var dataSourceCart = new kendo.data.DataSource({aggregate: [{ field: "Price", aggregate: "sum" }] });

  // Var Counter
  var itemCounter = 0;

  // Currency Format
  var formatter = new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN',
    minimumFractionDigits: 2,              
  });

  // Kendo Observable
  var viewModelListview = kendo.observable({    
    items: dataSourceItems,
    clickInc : function(e){      
      itemCounter += 1;      
      var id = e.target.parentElement.parentElement.children[0].children[1].textContent;
      var name = e.target.parentElement.parentElement.children[0].children[0].textContent;
      var price = e.target.parentElement.parentElement.children[0].children[4].textContent;
      var stock = e.target.parentElement.parentElement.children[0].children[3].textContent.replace("Stock: ", "");      
      e.target.nextElementSibling.value = Number(e.target.nextElementSibling.value) + 1
      var qtty = e.target.nextElementSibling.value;

      dataSourceCart.add({ id: id, itemc: itemCounter, Name: name, Price: price })
      dataSourceCart.sync
      
      dataSourceCart.fetch(function(){
        var data = dataSourceCart.data();
        var sum = 0;
        console.log(data);
        data.forEach(function(item) {                  
          sum += parseInt(item.Price.replace("$", "").replace(",", ""));
        });                
        $("#cartTotal").html(formatter.format(sum));
      });              
      e.target.parentElement.parentElement.children[0].children[3].textContent = "Stock: " + (parseInt(stock) - 1); 
      e.target.nextElementSibling.nextElementSibling.disabled = false
      notification.show({ title: "Cart Updated!", message: "New item has been added!"}, "info");
    },
    clickDec: function(e){
      itemCounter -= 1;
      var id = e.target.parentElement.parentElement.children[0].children[1].textContent;
      var name = e.target.parentElement.parentElement.children[0].children[0].textContent;
      var price = e.target.parentElement.parentElement.children[0].children[4].textContent;
      var stock = e.target.parentElement.parentElement.children[0].children[3].textContent.replace("Stock: ", "");            
      dataItem = dataSourceCart.get(id);
      dataSourceCart.remove(dataItem);
      dataSourceCart.fetch(function(){
        var data = dataSourceCart.data();
        var sum = 0;
        console.log(data);
        data.forEach(function(item) {                  
          sum += parseInt(item.Price.replace("$", "").replace(",", ""));
        });                
        $("#cartTotal").html(formatter.format(sum));
      });      
      e.target.previousElementSibling.value = Number(e.target.previousElementSibling.value) - 1
      e.target.parentElement.parentElement.children[0].children[3].textContent = "Stock: " + (parseInt(stock) + 1);      
      if( e.target.previousElementSibling.value == 0 ){                  
        e.target.disabled = true;
      }                            
      notification.show({ title: "Cart Updated!", message: "Item has been removed!"}, "error");
    }
  });    
  
  // Binding
  kendo.bind($("#example"), viewModelListview);
</script>